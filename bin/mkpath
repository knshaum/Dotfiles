#!/usr/bin/env perl

use strict;
use warnings;

my @patterns = qw{
    /usr/local/*/bin
    /opt/local/bin
    /opt/local/sbin
    /usr/local/sbin
    /usr/local/bin
    /sbin
    /bin
    /usr/sbin
    /usr/bin

    /Developer/usr/bin
    /Developer/usr/sbin

    /usr/local/cpanel/3rdparty/perl/514/bin
    /usr/local/cpanel/3rdparty/bin
    /usr/local/cpanel/bin
    /usr/local/jdk/bin
    /usr/local/mysql/bin
    /usr/X11R6/bin
    /usr/lib/courier-imap/sbin
    /usr/lib/courier-imap/bin

    ~/bin
    ~/Dotfiles/bin
    ~/Dropbox/Linux/bin
};

my @dirs;
my %found;
foreach my $pattern ( @patterns ) {
    my @globs = grep { -d } ( glob $pattern );
    for my $dir ( @globs ) {
        if ( !$found{$dir} ) {
            push @dirs, $dir;
            $found{$dir} = 1;
        }
    }
}
print join(':', @dirs), "\n";
