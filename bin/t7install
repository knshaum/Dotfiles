#!/bin/sh

if [ -n "$1" ] ; then
    version=$1
else
    version='7.0.41-1'
fi

rpm -Uvh --replacepkgs /root/savedrpms/easy-tomcat7-$version.noarch.rpm /root/savedrpms/easy-tomcat7-admin-webapps-$version.noarch.rpm /root/savedrpms/easy-tomcat7-docs-webapp-$version.noarch.rpm /root/savedrpms/easy-tomcat7-el-2.2-api-$version.noarch.rpm /root/savedrpms/easy-tomcat7-javadoc-$version.noarch.rpm /root/savedrpms/easy-tomcat7-jsp-2.2-api-$version.noarch.rpm /root/savedrpms/easy-tomcat7-lib-$version.noarch.rpm /root/savedrpms/easy-tomcat7-servlet-3.0-api-$version.noarch.rpm /root/savedrpms/easy-tomcat7-webapps-$version.noarch.rpm
